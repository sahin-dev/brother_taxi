enum TravelPartner {
  MENS
  WOMENS
  NON_BINARIES
  EVERYONE
}

enum GenderSubCategory {
  INTERSEX
  TRANSEXUAL
  CIS
  MAN_NON_BINARY
  TRANSMASCULIN
}

enum RequestType {
  LOGIN
  SIGNUP
  CHANGE_PHONE
}